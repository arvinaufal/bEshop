<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_header') %>

<body>
    <%- include('../partials/_navbar') %>

    <% if (errors) { %>
        <div class="row justify-content-center mt-4 mb-4">
           <div class="col-10">
               <% errors.split(',').forEach(er => { %>
               <div class="alert alert-danger" role="alert">
                    <p><%= er %></p>
                </div>
                <% }) %>
           </div>
        </div>
       <% } %>

    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                Form Pendaftaran
            </div>
            <div class="card-body">
                <form action="" method="post">
                    <div class="mb-3">
                        <label for="role" class="form-label">Daftar Sebagai</label>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Role</label>
                            <select class="form-select" id="inputGroupSelect01" name="role" required>
                                    <option selected disabled>---Choose Role---</option>
                                <% ["seller", "buyer"].forEach(el => { %>
                                    <option value="<%= el %>"><%= el %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                        <label for="konfirmasi_password" class="form-label">Konfirmasi Password</label>
                        <input type="password" class="form-control" id="konfirmasi_password" name="passwordConfirm" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Daftar</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/_footer.ejs') %>
</body>

</html>
